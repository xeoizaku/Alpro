import java.util.Scanner;

public class BalikSegitiga {
 public static void main(String[] args) {
   Scanner masukan = new Scanner(System.in);
   int a,b,c,d;
   
   System.out.println("Masukkan angka : ");
   a = masukan.nextInt();

   for(b=0 ;b<=a; b++){
	for(c=a; c>b; c--){
		System.out.print("*");
	}
 
	System.out.println();
      }	
   }
}
